# Copy this file to `.env` and fill in your actual values for each environment variable.

DATABASE_URL="your-database-url-here>"

# Authentication secrets
AUTH_SECRET="<your_auth_secret_here>"
AUTH_GOOGLE_ID="<your_google_client_id_here>"
AUTH_GOOGLE_SECRET="<your_google_client_secret_here>"

# Encryption and security keys
CRYPTO_SECRET_KEY="<your_crypto_secret_key_here>"
JWT_SECRET_KEY="<your_jwt_secret_key_here>"

# Email server configuration
EMAIL_PORT="587"
EMAIL_HOST="<smtp.your-email-host.com>"
EMAIL_USER="<your_email_username>"
EMAIL_PASSWORD="<your_email_password_encrypted_or_hidden>"

# Node environment
NODE_ENV="<development>"

# Recaptcha keys
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="<your_recaptcha_site_key_here>"
RECAPTCHA_SECRET_KEY="<your_recaptcha_secret_key_here>"

# Duffel API token
DUFFEL_TOKEN="<your_duffel_api_token_here>"
